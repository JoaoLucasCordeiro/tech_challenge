{
  "compilerOptions": {
    "target": "es2020",
    "module": "CommonJS",         
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["es2020"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
